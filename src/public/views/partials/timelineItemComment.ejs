<li class="comments__item" data-comment-id="<%= comment.id %>">
  <div class="post__user">
    <a href="/profile/<%= comment.author.username %>">
      <img
        class="post__avatar"
        src="https://i.stack.imgur.com/HQwHI.jpg"
        alt="<%= comment.author.username %>"
      />
    </a>
  </div>
  <div class="post__body">
    <h3 class="post__username">
      <a href="/profile/<%= comment.author.username %>">
        <%= comment.author.name %>
      </a>
    </h3>
    <p class="post__content"><%= comment.content %></p>
    <div class="post__footer">
      <div
        class="post__reactions <% if (user) { %>post__reactions--active<% } %>"
      >
        <button
          class="post__reaction-btn <%= comment.userReactions?.like ? 'post__reaction-btn--selected': '' %>"
          data-reaction="like"
        >
          üëç
          <span class="post__reaction-count"
            ><%= comment?.reactions?.like || 0 %></span
          >
        </button>
        <button
          class="post__reaction-btn <%= comment.userReactions?.smile ? 'post__reaction-btn--selected': '' %>"
          data-reaction="smile"
        >
          üòÄ
          <span class="post__reaction-count"
            ><%= comment?.reactions?.smile || 0 %></span
          >
        </button>
        <button
          class="post__reaction-btn <%= comment.userReactions?.star ? 'post__reaction-btn--selected': '' %>"
          data-reaction="star"
        >
          ‚≠ê
          <span class="post__reaction-count"
            ><%= comment?.reactions?.star || 0 %></span
          >
        </button>
        <button
          class="post__reaction-btn <%= comment.userReactions?.heart ? 'post__reaction-btn--selected': '' %>"
          data-reaction="heart"
        >
          ‚ù§Ô∏è
          <span class="post__reaction-count"
            ><%= comment?.reactions?.heart || 0 %></span
          >
        </button>
      </div>
      <p class="post__date"><%= comment.createdAt %></p>
    </div>
  </div>
</li>
